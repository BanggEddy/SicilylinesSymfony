{% extends 'base.html.twig' %}

{% block title %}Hello RechercheTraverseeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Heuree</th>
            </tr>
        </thead>
        <tbody>
        {% for traversee in traversees %}
            <tr>
                <td>{{ traversee.id }}</td>
                <td>{{ traversee.date ? traversee.date|date('Y-m-d') : '' }}</td>
                <td>{{ traversee.heuree }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
