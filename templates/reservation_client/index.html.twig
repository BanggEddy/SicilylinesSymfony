{% extends 'client.html.twig' %}

{% block title %}Reservation index{% endblock %}

{% block body %}
    <section id="hautcontact">
<div class="saut"></div>
<div class="precontact">
<p style="    font-size: 100px;"> List Reservation </p>
</div>
</section>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>{{ reservation.id }}</td>
                <td>
                    <a href="{{ path('app_reservation_client_show', {'id': reservation.id}) }}">show</a>
                    <a href="{{ path('app_reservation_client_edit', {'id': reservation.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reservation_client_new') }}">Create new</a>
{% endblock %}
